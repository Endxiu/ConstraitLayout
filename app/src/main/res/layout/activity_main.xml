<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ImageView
        android:id="@+id/ikona1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alucard"
        app:layout_constraintEnd_toStartOf="@+id/ikona2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="350dp"
        app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageView
        android:id="@+id/ikona2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alucard"
        app:layout_constraintEnd_toStartOf="@+id/ikona3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ikona1"
        tools:layout_editor_absoluteY="350dp" />

    <ImageView
        android:id="@+id/ikona3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/alucard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ikona2"
        tools:layout_editor_absoluteY="350dp" />

</androidx.constraintlayout.widget.ConstraintLayout>